listeTaches = [
  {
    id: 1,
    titre: "Apprendre Node.js",
    description: "Cours Express",
    date_debut: "2026-01-19",
    date_fin: "2026-01-25",
    done: false
  },
  {
    id: 2,
    titre: "Développer TODO app",
    description: "CRUD complet avec JSON",
    date_debut: "2026-01-20",
    date_fin: null,
    done: true
  }
];

const service = {

    // récupère toutes les taches
    getAll: () => {
        return listeTaches
    },

    // récupère une tache par son id
    getById: (id) => {
        return listeTaches.find(tache => tache.id === parseInt(id))
    },

    // créer une tache
    create: (tache) => {
        listeTaches.push(tache)
        return tache
    },

    // met à jour une tache
    update: (id, tache) => {
        const index = listeTaches.findIndex(tache => tache.id === parseInt(id))
        if (index !== -1) {
            listeTaches[index] = tache
            return tache
        }
        return null
    },

    // supprime une tache
    delete: (id) => {
        const index = listeTaches.findIndex(tache => tache.id === parseInt(id))
        if (index !== -1) {
            listeTaches.splice(index, 1)
            return true
        }
        return false
    }
}
module.exports = service;